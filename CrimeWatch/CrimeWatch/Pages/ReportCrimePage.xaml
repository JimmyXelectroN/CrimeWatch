<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="CrimeWatch.Pages.ReportCrimePage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid>

            <Image Source="reportCrime.jpg" Aspect="AspectFill" />

            <Frame BackgroundColor="Black" Opacity="0.8"/>

            <ImageButton Source="backIconWhite.png" BackgroundColor="Transparent" Clicked="OnBackClicked" Margin="30,20,0,15" HorizontalOptions="Start" VerticalOptions="Start"
                             HeightRequest="20" WidthRequest="20"/>

            <Label Text="Coming Soon" TextColor="White" FontSize="36" HorizontalTextAlignment="Center" HorizontalOptions="Center"  Margin="20"
                   FontFamily="{StaticResource SofiaProMedium}" VerticalOptions="Center" Padding="40"/>

        </Grid>
    </ContentPage.Content>
</ContentPage>